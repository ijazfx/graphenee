			</dependency>
			<dependency>
				<groupId>com.zybnet</groupId>
				<artifactId>vaadin-autocomplete</artifactId>
				<version>1.1.1</version>
			</dependency>
			<!-- vaadin pro components -->
			<dependency>
				<groupId>com.vaadin.addon</groupId>
				<artifactId>vaadin-charts</artifactId>
				<version>3.3.1</version>
			</dependency>
			<dependency>
