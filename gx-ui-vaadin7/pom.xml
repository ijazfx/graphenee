			</dependency>
			<dependency>
				<groupId>com.vaadin.addon</groupId>
				<artifactId>vaadin-context-menu</artifactId>
				<version>0.7.5</version>
			</dependency>
			<dependency>
				<groupId>org.vaadin.addon</groupId>
